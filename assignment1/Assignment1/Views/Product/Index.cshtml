@{
}
<h1>Product Inventory</h1>
<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>ID</th><th>Name</th><th>Price</th><th>Stock</th>
        </tr>
        @foreach (var item in Model)
		{
            <tr>
                <td>@item.Pid</td>
                <td>@item.Pname</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
            </tr>
		}
    </table>
    <h4><a href="Create" >Add Product</a></h4>
</div>